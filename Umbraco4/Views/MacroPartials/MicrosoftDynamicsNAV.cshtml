@inherits Umbraco.Web.Macros.PartialViewMacroPage

@{
		var selection = Umbraco.TypedContent(1156).Children("blogpost")
						.Where(x => x.IsVisible())
						.Where(x => x.Name == "Microsoft Dynamics NAV");
}
<style>
    .styleH3{height: 70px  !important;}
    .divHeight{height:220px}
    .styleP{color:black}
    .mdnav{
        background-image:url(/media/1034/40_mdnav.png);
        background-repeat: no-repeat;
        background-size: 30%;
        background-position-x: 100%;
        background-position-y: -10%;
    }
</style>
@foreach(var item in selection){


	
	<div class="blog-wrapper mb-60 mdnav">
		
	    <div class="blog-text">
	        <div class="divHeight">
        			<h3 class="styleH3"><a href="@item.Url">@item.Name</a></h3>
        			<span>@item.CreateDate.ToString("dd MMM")</span>
        			<p class="styleP">	@item.GetPropertyValue("Excerpt")</p>

			</div>
			<a class="styleA" href="@item.Url">Continue Reading</a>
		</div>
	
	</div>
}




