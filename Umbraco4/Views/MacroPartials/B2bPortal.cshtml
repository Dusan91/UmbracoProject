@inherits Umbraco.Web.Macros.PartialViewMacroPage

@{
	var selection = Umbraco.TypedContent(1156).Children("blogpost")
						.Where(x => x.IsVisible())
						.Where(x => x.Name == "B2B Portal");
}
<style>
    .styleH3{height: 70px !important;}
    .divHeight{height:220px}
    .styleP{color:black}
    .b2b{
        background-image: url(/media/1036/40_share-point.png);
        background-repeat: no-repeat;
        background-position-x: 100%;
        background-position-y: 0%;
        background-size: 27%;
    }
</style>
@foreach(var item in selection){
	<div class="blog-wrapper mb-60 b2b">
		
	    <div class="blog-text">
	        <div class="divHeight">
			<h3 class="styleH3"><a href="@item.Url">@item.Name</a></h3>
			<span>@item.CreateDate.ToString("dd MMM")</span>
			<p class="styleP">	@item.GetPropertyValue("Excerpt")</p>
			</div>
			<a  href="@item.Url">Continue Reading</a>
		</div>
	</div>
}

